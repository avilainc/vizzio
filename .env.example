# ==========================================
# AVILA CORE - Configurações Internas
# ==========================================
AVILA_LOG_LEVEL=info
AVILA_LOG_FORMAT=json
AVILA_METRICS_ENABLED=true
AVILA_METRICS_PORT=9090
AVILA_TRACE_ENABLED=true

# ==========================================
# AVILA DATABASE - avila-db
# ==========================================
AVILA_DB_PATH=./data/avila.db
AVILA_DB_CACHE_SIZE=1024
AVILA_DB_WAL_ENABLED=true
AVILA_DB_MAX_CONNECTIONS=100
AVILA_DB_POOL_SIZE=10

# ==========================================
# AVILA CRYPTO - avila-crypto, avila-aead, avila-jwt
# ==========================================
AVILA_CRYPTO_KEY=your-256-bit-key-here-change-in-production
AVILA_JWT_SECRET=your-jwt-secret-key-change-in-production
AVILA_JWT_EXPIRY=3600
AVILA_KDF_ITERATIONS=100000
AVILA_TLS_CERT=./certs/server.crt
AVILA_TLS_KEY=./certs/server.key

# ==========================================
# AVILA HTTP - avila-http
# ==========================================
AVILA_HTTP_HOST=0.0.0.0
AVILA_HTTP_PORT=3000
AVILA_HTTP_WORKERS=4
AVILA_HTTP_TIMEOUT=30
AVILA_HTTP_MAX_BODY_SIZE=10485760

# ==========================================
# AVILA GRPC - avila-grpc
# ==========================================
AVILA_GRPC_HOST=0.0.0.0
AVILA_GRPC_PORT=50051
AVILA_GRPC_MAX_MESSAGE_SIZE=4194304
AVILA_GRPC_KEEPALIVE_INTERVAL=60

# ==========================================
# AVILA BIM - avila-bim
# ==========================================
AVILA_BIM_IFC_PATH=./*.ifc
AVILA_BIM_OUTPUT_DIR=./output/models
AVILA_BIM_GLTF_COMPRESSION=true
AVILA_BIM_4D_ENABLED=true

# ==========================================
# AVILA GEO - avila-geo
# ==========================================
AVILA_GEO_PROJ_DB=./data/proj.db
AVILA_GEO_TILE_CACHE=./cache/tiles
AVILA_GEO_MAX_ZOOM=18
AVILA_GEO_TILE_SIZE=256

# ==========================================
# AVILA ASYNC - avila-async (Runtime)
# ==========================================
AVILA_ASYNC_WORKERS=num_cpus
AVILA_ASYNC_STACK_SIZE=2097152
AVILA_ASYNC_EVENT_INTERVAL=61

# ==========================================
# AVL CONSOLE - avl-console (Observability)
# ==========================================
AVL_CONSOLE_HOST=0.0.0.0
AVL_CONSOLE_PORT=8888
AVL_METRICS_RETENTION=30d
AVL_LOG_RETENTION=7d
AVL_TRACE_SAMPLE_RATE=0.1

# ==========================================
# AVILA COORDINATOR - avila-coordinator (Distributed)
# ==========================================
AVILA_COORDINATOR_RAFT_PORT=7000
AVILA_COORDINATOR_HEARTBEAT=500
AVILA_COORDINATOR_ELECTION_TIMEOUT=1500
AVILA_COORDINATOR_NODE_ID=node-1

# ==========================================
# AVILA CACHE - avila-cache
# ==========================================
AVILA_CACHE_MAX_SIZE=1073741824
AVILA_CACHE_TTL=3600
AVILA_CACHE_EVICTION_POLICY=lru

# ==========================================
# AVILA ML - avila-ml
# ==========================================
AVILA_ML_DEVICE=cpu
AVILA_ML_BATCH_SIZE=32
AVILA_ML_NUM_THREADS=4
AVILA_ML_MODEL_PATH=./models

# ==========================================
# DNS & Domain Services (External - Optional)
# ==========================================
PORKBUN_API_KEY=your-porkbun-api-key
PORKBUN_SECRET_KEY=your-porkbun-secret-key
CLOUDFLARE_API_KEY=your-cloudflare-api-key

# ==========================================
# Database External (Optional - MongoDB Atlas)
# ==========================================
MONGO_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/

# ==========================================
