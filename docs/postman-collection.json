              "raw": "{{base_url}}/analytics/errors?startDate=2024-12-01T00:00:00Z&endDate=2024-12-07T23:59:59Z&limit=10",
              "host": ["{{base_url}}"],
              "path": ["analytics", "errors"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2024-12-01T00:00:00Z"
                },
                {
                  "key": "endDate",
                  "value": "2024-12-07T23:59:59Z"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "Get error statistics and top errors"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Billing",
      "item": [
        {
          "name": "List Subscriptions",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has data array\", function () {",
                  "    var jsonData = pm.response.json();",
