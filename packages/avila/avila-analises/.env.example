# Environment Variables Template
# Copy this file to .env and fill in your values

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Database
DATABASE_URL=aviladb://localhost:5432/analytics
DB_MAX_CONNECTIONS=100

# Kafka
KAFKA_BROKER_1=localhost:9092
KAFKA_BROKER_2=localhost:9093
KAFKA_BROKER_3=localhost:9094
KAFKA_TOPIC=analytics-events
KAFKA_GROUP_ID=avila-analytics

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
AUTH_ENABLED=true

# ML
ML_FRAMEWORK=pytorch
MODEL_DIR=/path/to/models

# Redis (if used)
REDIS_URL=redis://localhost:6379

# AWS (for Kinesis/S3)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
KINESIS_STREAM_NAME=analytics-stream

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
