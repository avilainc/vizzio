# VIZZIO PLATFORM - PRODUCTION CONFIGURATION

# Production Environment Variables
# Copy this to .env.production and update values for your environment

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# Database Configuration
MONGODB_URI=mongodb://admin:password123@localhost:27017/vizzio?authSource=admin
MONGODB_MAX_POOL_SIZE=100
MONGODB_MIN_POOL_SIZE=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:password123@localhost:5672
RABBITMQ_PREFETCH=10
RABBITMQ_HEARTBEAT=60

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_APP_NAME=Vizzio
NEXT_PUBLIC_ENVIRONMENT=production

# Email Service Configuration
EMAIL_FROM=noreply@vizzio.local
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SENDGRID_API_KEY=your-sendgrid-key

# Payment Processing
STRIPE_SECRET_KEY=sk_live_xxxxx
STRIPE_PUBLIC_KEY=pk_live_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# External Integrations
SALESFORCE_CLIENT_ID=your-client-id
SALESFORCE_CLIENT_SECRET=your-client-secret
SALESFORCE_USERNAME=your-username
SALESFORCE_PASSWORD=your-password

SLACK_BOT_TOKEN=xoxb-your-token
SLACK_SIGNING_SECRET=your-signing-secret

HUBSPOT_API_KEY=your-hubspot-key
HUBSPOT_APP_ID=your-app-id

# AI/LLM Integration
OPENAI_API_KEY=sk-xxxxx
OPENAI_ORG_ID=org-xxxxx

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d
CORS_ORIGIN=http://localhost:3001,https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_FILE=/var/log/vizzio/app.log
LOG_MAX_SIZE=10M
LOG_MAX_FILES=10

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=0 2 * * * (cron format)
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups/vizzio

# SSL/TLS Configuration (Optional)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/vizzio.crt
SSL_KEY_PATH=/etc/ssl/private/vizzio.key

# API Rate Limiting
API_RATE_LIMIT=1000
API_RATE_WINDOW=3600

# Database Backup
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE=0 3 * * * (cron format - 3 AM daily)

# Timezone
TZ=UTC
