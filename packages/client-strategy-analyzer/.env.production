# ============================================================================
# VIZZIO PLATFORM - PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
# Generated: $(date)
# Status: Production Deployment
# ============================================================================

# ============================================================================
# NODE & SERVER CONFIGURATION
# ============================================================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info
DEBUG=false

# ============================================================================
# MONGODB CONFIGURATION
# ============================================================================
MONGODB_URL=mongodb://admin:password123@vizzio-mongodb:27017/vizzio?authSource=admin
MONGODB_USER=admin
MONGODB_PASSWORD=password123
MONGODB_DATABASE=vizzio
MONGODB_AUTH_SOURCE=admin
MONGODB_POOL_SIZE=20
MONGODB_CONNECT_TIMEOUT=10000
MONGODB_SOCKET_TIMEOUT=30000

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://vizzio-redis:6379
REDIS_HOST=vizzio-redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_CONNECT_TIMEOUT=5000

# ============================================================================
# RABBITMQ CONFIGURATION
# ============================================================================
RABBITMQ_URL=amqp://admin:password123@vizzio-rabbitmq:5672
RABBITMQ_HOST=vizzio-rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=password123
RABBITMQ_VHOST=/
RABBITMQ_PREFETCH=10

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
FRONTEND_PORT=3001
FRONTEND_URL=http://localhost:3001
FRONTEND_CORS_ORIGIN=http://localhost:3001
VITE_API_URL=http://localhost:3000/api

# ============================================================================
# BACKEND API CONFIGURATION
# ============================================================================
API_URL=http://localhost:3000
API_PORT=3000
API_PREFIX=/api
API_VERSION=v1

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars!
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars-change-production!
JWT_REFRESH_EXPIRATION=7d
BCRYPT_ROUNDS=10
CORS_ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true
CORS_MAX_AGE=3600

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================
SESSION_SECRET=your-session-secret-min-32-chars-change-in-production-now!
SESSION_TIMEOUT=3600
SESSION_REFRESH_TIMEOUT=86400

# ============================================================================
# EMAIL SERVICE CONFIGURATION
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@vizzio.com
SMTP_FROM_NAME=Vizzio Platform
EMAIL_SERVICE=smtp

# SendGrid Alternative
SENDGRID_API_KEY=sg_your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@vizzio.com

# ============================================================================
# PAYMENT PROCESSING - STRIPE
# ============================================================================
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_API_VERSION=2023-10-16

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================
# Salesforce
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_INSTANCE_URL=https://your-instance.salesforce.com

# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# HubSpot
HUBSPOT_API_KEY=your-hubspot-private-app-token

# ============================================================================
# AI & LLM CONFIGURATION
# ============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Alternative LLM Providers
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-opus

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================
# Sentry
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACING_ENABLED=true
SENTRY_TRACES_SAMPLE_RATE=0.1

# New Relic
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=vizzio-platform

# DataDog
DATADOG_API_KEY=your-datadog-api-key
DATADOG_SITE=datadoghq.com

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_FORMAT=json
LOG_DESTINATION=file
LOG_FILE_PATH=/var/log/vizzio/application.log
LOG_MAX_SIZE=100m
LOG_MAX_FILES=10
LOG_RETENTION_DAYS=30

# ============================================================================
# BACKUP & DISASTER RECOVERY
# ============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/data/backups

# AWS S3 Backup
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=vizzio-backups

# ============================================================================
# PERFORMANCE & SCALING
# ============================================================================
CACHE_ENABLED=true
CACHE_TTL=3600
CONNECTION_POOL_SIZE=50
QUERY_TIMEOUT=30000
MAX_REQUEST_SIZE=50mb
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# SSL/TLS CONFIGURATION
# ============================================================================
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/private/server.key
SSL_PROTOCOLS=TLSv1.2,TLSv1.3
SSL_CIPHERS=HIGH:!aNULL:!MD5

# ============================================================================
# DEPLOYMENT METADATA
# ============================================================================
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_TIMESTAMP=$(date)
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_CLUSTER=primary
