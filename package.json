{
  "name": "vizzio",
  "version": "1.0.0",
  "description": "VIZZIO - Plataforma Completa de Automação Empresarial com Rust + Node.js | Complete Business Automation Platform",
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/workflows",
    "packages/email-service",
    "packages/finance-tools",
    "packages/marketing-automation",
    "packages/sales-pipeline",
    "packages/shortcuts",
    "packages/integrations",
    "packages/ai-assistant",
    "packages/backend",
    "packages/frontend",
    "packages/mobile",
    "packages/cli"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "build:rust": "cargo build --workspace --release",
    "build:node": "npm run build --workspaces",
    "build:all": "npm run build:rust && npm run build:node",
    "test": "npm run test --workspaces",
    "test:rust": "cargo test --workspace",
    "test:all": "npm run test:rust && npm run test",
    "lint": "npm run lint --workspaces",
    "lint:rust": "cargo clippy --workspace -- -D warnings",
    "lint:all": "npm run lint:rust && npm run lint",
    "format": "prettier --write \"packages/**/src/**/*.{ts,tsx,json,md}\" && cargo fmt --all",
    "clean": "npm run clean --workspaces && rimraf node_modules && cargo clean",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "install-dependencies": "npm install && npm install -g @types/node typescript && rustup update",
    "setup": "npm run install-dependencies && npm run build:all",
    "dev:server": "cd packages/backend && npm run dev",
    "dev:client": "cd packages/frontend && npm run dev",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:rust": "cargo watch -x 'check --workspace' -x 'test --workspace'",
    "start": "npm run dev:all",
    "docs": "typedoc --out docs packages/*/src",
    "docs:rust": "cargo doc --workspace --no-deps --open",
    "db:migrate": "mongosh admin -u admin -p password123 --eval \"db.version()\""
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "automation",
    "workflow",
    "email",
    "crm",
    "marketing",
    "sales",
    "finance",
    "monorepo"
  ],
  "author": "Avila Inc.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/avilainc/vizzio.git"
  },
  "bugs": {
    "url": "https://github.com/avilainc/vizzio/issues"
  },
  "homepage": "https://github.com/avilainc/vizzio#readme",
  "dependencies": {
    "@types/axios": "^0.9.36",
    "@types/bull": "^3.15.9",
    "@types/commander": "^2.12.0",
    "@types/nodemailer": "^7.0.4",
    "axios": "^1.13.2",
    "bull": "^4.16.5",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "nodemailer": "^7.0.11"
  }
}
