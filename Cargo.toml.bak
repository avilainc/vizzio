# ===== Node.js packages gerenciados por npm workspaces =====
# Ver package.json para Node.js configuration

[workspace.package]
version = "1.0.0"
edition = "2021"
authors = ["Vizzio Team"]
license = "MIT OR Apache-2.0"
repository = "https://github.com/avilainc/vizzio"
homepage = "https://vizzio.com"
documentation = "https://docs.vizzio.com"

# Dependências globais compartilhadas
[workspace.dependencies]
# Async & Runtime
tokio = { version = "1.35", features = ["full"] }
async-trait = "0.1"
futures = "0.3"
pin-project = "1.1"

# Serialization
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
bincode = "1.3"
protobuf = "2.28"

# Cryptography
ring = "0.17"
sha2 = "0.10"
hmac = "0.12"
aes = "0.8"
rand = "0.8"

# Web & HTTP
hyper = { version = "0.14", features = ["full"] }
reqwest = { version = "0.11", features = ["json"] }
tonic = "0.10"
prost = "0.12"

# Logging & Tracing
tracing = "0.1"
tracing-subscriber = "0.3"
log = "0.4"
env_logger = "0.11"

# Database
sqlx = { version = "0.7", features = ["runtime-tokio-native-tls", "postgres"] }
mongodb = "2.7"
redis = "0.24"

# CLI
clap = { version = "4.4", features = ["derive"] }
structopt = "0.3"

# Testing
criterion = "0.5"
proptest = "1.4"

# Utilities
anyhow = "1.0"
thiserror = "1.0"
once_cell = "1.19"
parking_lot = "0.12"
rayon = "1.8"

[profile.release]
opt-level = 3
lto = true
codegen-units = 1
strip = true

[profile.dev]
opt-level = 0
